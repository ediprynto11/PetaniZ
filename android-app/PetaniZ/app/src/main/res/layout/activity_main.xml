<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Logo -->
            <ImageView
                android:id="@+id/icLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/icCamera"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="16dp"
                android:clickable="true"
                android:src="@drawable/ic_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <!-- Greeting -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallo, Edi"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/icLogo"
                app:layout_constraintStart_toStartOf="@id/icLogo"/>

            <TextView
                android:id="@+id/tvPompa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pompa"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPompa" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/btnPompa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting"

                app:trackDecorationTint="@color/transparent"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track"/>

            <!-- Plant Image -->
            <ImageView
                android:id="@+id/imgPlant"
                android:layout_width="230dp"
                android:layout_height="330dp"
                android:src="@drawable/ic_chili"
                android:contentDescription="Plant"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

<!--            <TextView-->
<!--                android:id="@+id/tvPompa"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Pompa"-->
<!--                android:layout_marginStart="16dp"-->
